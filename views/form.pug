extends ./layout.pug 

block content
    -data = data || {}

    if errors 
        ul.my-errors
            for error in errors 
                li=error.msg 

    form(action='.' method='POST' class='form-registration')
        label(for="name") Name:
        input(
            type="text"
            name="name"
            id="name"
            class='form-control'
            value=data.name
        )

        label(for="email") Email: 
        input(
            type="text"
            name="email"
            id="email"
            class='form-control'
            value=data.email
        )

        input(type="submit" class='btn btn-lg btn-primary btn-block' value="Submit")